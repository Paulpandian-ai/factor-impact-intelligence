# CELL 2: Imports
import yfinance as yf
from fredapi import Fred
import pandas as pd
import numpy as np
from datetime import datetime, timedelta
import plotly.graph_objects as go
import matplotlib.pyplot as plt
import warnings
warnings.filterwarnings('ignore')

# CELL 3: Analyzer Class
class MonetaryFactorAnalyzer:
    def __init__(self, fred_api_key: str):
        self.fred = Fred(api_key=fred_api_key)
        self.weights = {'fed_rate': 0.35, 'inflation': 0.35, 'treasury_yield': 0.30}
    
    def get_stock_data(self, ticker: str):
        try:
            stock = yf.Ticker(ticker)
            end_date = datetime.now()
            start_date = end_date - timedelta(days=365)
            hist = stock.history(start=start_date, end=end_date)
            if hist.empty:
                raise ValueError(f"No data found for {ticker}")
            return hist, stock.info
        except Exception as e:
            print(f"Error: {str(e)}")
            return None, None
    
    def calculate_stock_beta(self, stock_data, info):
        try:
            if 'beta' in info and info['beta']:
                return float(info['beta'])
            stock_returns = stock_data['Close'].pct_change().dropna()
            spy = yf.Ticker('SPY')
            spy_hist = spy.history(start=stock_data.index[0], end=stock_data.index[-1])
            spy_returns = spy_hist['Close'].pct_change().dropna()
            aligned = pd.DataFrame({'stock': stock_returns, 'market': spy_returns}).dropna()
            if len(aligned) < 30:
                return 1.0
            return aligned.cov().loc['stock', 'market'] / aligned['market'].var()
        except:
            return 1.0
    
    def get_fed_funds_rate(self):
        try:
            end_date = datetime.now()
            start_date = end_date - timedelta(days=365)
            fed_rate = self.fred.get_series('FEDFUNDS', observation_start=start_date, observation_end=end_date)
            if fed_rate.empty:
                return None
            current_rate = fed_rate.iloc[-1]
            three_months_ago = fed_rate.iloc[-4] if len(fed_rate) >= 4 else fed_rate.iloc[0]
            change_3m = current_rate - three_months_ago
            
            trend = "stable"
            if change_3m > 0.25:
                trend = "aggressive_tightening"
            elif change_3m > 0:
                trend = "tightening"
            elif change_3m < -0.25:
                trend = "aggressive_easing"
            elif change_3m < 0:
                trend = "easing"
            
            return {'current_rate': current_rate, 'change_3m': change_3m, 'trend': trend, 'data': fed_rate}
        except:
            return None
    
    def get_inflation_data(self):
        try:
            end_date = datetime.now()
            start_date = end_date - timedelta(days=365)
            cpi = self.fred.get_series('CPIAUCSL', observation_start=start_date, observation_end=end_date)
            if cpi.empty or len(cpi) < 12:
                return None
            current_cpi = cpi.iloc[-1]
            year_ago_cpi = cpi.iloc[-13] if len(cpi) >= 13 else cpi.iloc[0]
            yoy_inflation = ((current_cpi - year_ago_cpi) / year_ago_cpi) * 100
            
            trend = "low_inflation"
            if yoy_inflation > 4.0:
                trend = "high_inflation"
            elif yoy_inflation > 2.5:
                trend = "elevated_inflation"
            elif yoy_inflation >= 1.5:
                trend = "target_range"
            
            return {'yoy_inflation': yoy_inflation, 'trend': trend, 'data': cpi}
        except:
            return None
    
    def get_treasury_yield(self):
        try:
            end_date = datetime.now()
            start_date = end_date - timedelta(days=365)
            treasury = self.fred.get_series('DGS10', observation_start=start_date, observation_end=end_date).dropna()
            if treasury.empty:
                return None
            current_yield = treasury.iloc[-1]
            month_ago = treasury.iloc[-22] if len(treasury) >= 22 else treasury.iloc[0]
            change_1m = current_yield - month_ago
            
            trend = "stable"
            if change_1m > 0.5:
                trend = "rapid_rise"
            elif change_1m > 0.1:
                trend = "rising"
            elif change_1m < -0.5:
                trend = "rapid_fall"
            elif change_1m < -0.1:
                trend = "falling"
            
            return {'current_yield': current_yield, 'change_1m': change_1m, 'trend': trend, 'data': treasury}
        except:
            return None
    
    def score_fed_rate_impact(self, fed_data, stock_beta):
        if not fed_data:
            return 0, "Unable to assess"
        scores = {"aggressive_tightening": -2.0, "tightening": -1.0, "aggressive_easing": 2.0, "easing": 1.0, "stable": 0.0}
        base = scores[fed_data['trend']]
        mult = 1.3 if stock_beta > 1.5 else 1.15 if stock_beta > 1.2 else 0.7 if stock_beta < 0.8 else 1.0
        final = max(-2.0, min(2.0, base * mult))
        reasoning = f"Fed: {fed_data['current_rate']:.2f}% ({fed_data['change_3m']:+.2f}% 3M)"
        return final, reasoning
    
    def score_inflation_impact(self, inflation_data, stock_beta):
        if not inflation_data:
            return 0, "Unable to assess"
        scores = {"high_inflation": -1.5, "elevated_inflation": -0.5, "target_range": 1.0, "low_inflation": 0.0}
        base = scores[inflation_data['trend']]
        mult = 1.2 if stock_beta > 1.5 else 1.0
        final = max(-2.0, min(2.0, base * mult))
        reasoning = f"CPI: {inflation_data['yoy_inflation']:.2f}% YoY"
        return final, reasoning
    
    def score_treasury_yield_impact(self, yield_data, stock_beta):
        if not yield_data:
            return 0, "Unable to assess"
        scores = {"rapid_rise": -2.0, "rising": -1.0, "rapid_fall": 2.0, "falling": 1.0, "stable": 0.0}
        base = scores[yield_data['trend']]
        mult = 1.3 if stock_beta > 1.5 else 1.0
        final = max(-2.0, min(2.0, base * mult))
        reasoning = f"10Y: {yield_data['current_yield']:.2f}%"
        return final, reasoning
    
    def analyze_ticker(self, ticker: str, verbose: bool = True):
        stock_data, stock_info = self.get_stock_data(ticker)
        if stock_data is None:
            return {'error': f"Unable to fetch data for {ticker}", 'success': False}
        
        stock_beta = self.calculate_stock_beta(stock_data, stock_info)
        fed_data = self.get_fed_funds_rate()
        inflation_data = self.get_inflation_data()
        yield_data = self.get_treasury_yield()
        
        fed_score, fed_reasoning = self.score_fed_rate_impact(fed_data, stock_beta)
        inf_score, inf_reasoning = self.score_inflation_impact(inflation_data, stock_beta)
        yld_score, yld_reasoning = self.score_treasury_yield_impact(yield_data, stock_beta)
        
        weighted = fed_score * 0.35 + inf_score * 0.35 + yld_score * 0.30
        composite = round(5.5 + (weighted * 2.25), 1)
        
        if composite >= 7.5:
            signal, confidence = "STRONG BUY", "High"
        elif composite >= 6.5:
            signal, confidence = "BUY", "Medium-High"
        elif composite >= 5.5:
            signal, confidence = "HOLD (Lean Buy)", "Medium"
        elif composite >= 4.5:
            signal, confidence = "HOLD", "Medium"
        elif composite >= 3.5:
            signal, confidence = "HOLD (Lean Sell)", "Medium"
        elif composite >= 2.5:
            signal, confidence = "SELL", "Medium-High"
        else:
            signal, confidence = "STRONG SELL", "High"
        
        if verbose:
            print(f"\n{'='*80}")
            print(f"{ticker.upper()} - Score: {composite}/10 - {signal}")
            print(f"{'='*80}")
            print(f"Beta: {stock_beta:.2f}")
            print(f"Fed Rate: {fed_score:+.1f}/2.0 - {fed_reasoning}")
            print(f"Inflation: {inf_score:+.1f}/2.0 - {inf_reasoning}")
            print(f"Yields: {yld_score:+.1f}/2.0 - {yld_reasoning}")
            print(f"{'='*80}\n")
        
        return {
            'success': True, 'ticker': ticker.upper(), 'stock_beta': stock_beta,
            'composite_score': composite, 'recommendation': signal, 'confidence': confidence,
            'factors': {
                'fed_rate': {'score': fed_score, 'reasoning': fed_reasoning, 'data': fed_data},
                'inflation': {'score': inf_score, 'reasoning': inf_reasoning, 'data': inflation_data},
                'treasury_yield': {'score': yld_score, 'reasoning': yld_reasoning, 'data': yield_data}
            }
        }

# CELL 4: Initialize (replace with your API key)
analyzer = MonetaryFactorAnalyzer(fred_api_key="fred_api_key")

# CELL 5: Analyze a stock
result = analyzer.analyze_ticker("NVDA")

# CELL 6: Visualize (optional)
if result['success']:
    # Gauge chart
    fig = go.Figure(go.Indicator(
        mode="gauge+number", value=result['composite_score'],
        title={'text': f"{result['ticker']} Score"},
        gauge={'axis': {'range': [0, 10]}, 'bar': {'color': "darkblue"},
               'steps': [{'range': [0, 3], 'color': "red"},
                        {'range': [3, 7], 'color': "yellow"},
                        {'range': [7, 10], 'color': "green"}]}
    ))
    fig.show()
    
    # Factor breakdown
    factors = result['factors']
    plt.figure(figsize=(10, 5))
    plt.bar(['Fed Rate', 'Inflation', 'Yields'],
            [factors['fed_rate']['score'], factors['inflation']['score'], factors['treasury_yield']['score']],
            color=['red' if s < 0 else 'green' for s in [factors['fed_rate']['score'], factors['inflation']['score'], factors['treasury_yield']['score']]])
    plt.axhline(0, color='black', linewidth=2)
    plt.ylabel('Score (-2 to +2)')
    plt.title(f"{result['ticker']} Factor Breakdown")
    plt.show()

# CELL 7: Batch analysis (optional)
tickers = ['NVDA', 'amzn', 'goog', 'orcl']
